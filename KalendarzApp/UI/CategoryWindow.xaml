<Window x:Class="KalendarzApp.UI.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalendarzApp.UI"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="312" Width="488" Background="Gray">
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="771*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="EdycjaKetegoriiLabel" Content="Nowa kategoria" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="410" Height="42" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
        <TextBox x:Name="NewNameTextBox" HorizontalAlignment="Center" Margin="0,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="410" Height="72" TextChanged="TextBox_TextChanged" FontSize="36" TextAlignment="Center"/>
        <Button x:Name="ConfirmButton" Content="Potwierdź" HorizontalAlignment="Left" Margin="144,221,0,0" VerticalAlignment="Top" Height="42" Width="86" FontSize="16" Click="ConfirmButton_Click"/>
        <Button x:Name="CancelButton" Content="Anuluj" HorizontalAlignment="Left" Margin="259,223,0,0" VerticalAlignment="Top" Height="41" Width="83" FontSize="16" Click="CancelButton_Click"/>

    </Grid>
</Window>
