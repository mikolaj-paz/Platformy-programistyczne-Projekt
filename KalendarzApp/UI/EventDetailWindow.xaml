<Window x:Class="KalendarzApp.UI.EventDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalendarzApp.UI"
        mc:Ignorable="d"
        Title="EventDetailWindow" Height="652" Width="573" Background="Gray">
    <Grid>
        <TextBox x:Name="EventTextBox" HorizontalAlignment="Left" Margin="80,378,0,0" TextWrapping="Wrap" Text="Event Name" VerticalAlignment="Top" Width="380" Height="42" FontSize="24" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <Label Content="Event" HorizontalAlignment="Left" Margin="136,315,0,0" VerticalAlignment="Top" Width="238" Height="37" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="321,540,0,0" VerticalAlignment="Top" Height="44" Width="102" Click="Button_Click" FontSize="18"/>
        <TextBox x:Name="StartDateTextBox" HorizontalAlignment="Left" Margin="80,118,0,0" TextWrapping="Wrap" Text="01.01.2003 00:00" VerticalAlignment="Top" Width="381" Height="42" FontSize="24" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <Label x:Name="StartDateLabel" Content="Start Date" HorizontalAlignment="Left" Margin="151,57,0,0" VerticalAlignment="Top" Width="238" Height="37" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <TextBox x:Name="EndDateTextBox" HorizontalAlignment="Left" Margin="80,249,0,0" TextWrapping="Wrap" Text="01.01.2003 01:00" VerticalAlignment="Top" Width="380" Height="42" FontSize="24" TextChanged="TextBox_TextChanged_1" TextAlignment="Center"/>
        <Label x:Name="EndDateLabel" Content="End Date" HorizontalAlignment="Left" Margin="151,188,0,0" VerticalAlignment="Top" Width="238" Height="37" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="136,540,0,0" VerticalAlignment="Top" Height="44" Width="102" Click="Button_Click_1" FontSize="18"/>

    </Grid>
</Window>
